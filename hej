<script>
    document.getElementById('fly1').addEventListener('click', function() {
        map.flyTo({
            center: [-4.631921, 36.570657],
            zoom: 15,
            speed: 0.4,
        });
        document.getElementById("info2").style.visibility = "hidden";
        document.getElementById("info1").style.visibility = "visible";



    });
    document.getElementById('fly2').addEventListener('click', function() {
        map.flyTo({
            center: [9.397826, 56.439302],
            zoom: 15,
            speed: 0.4,

        });
        document.getElementById("info1").style.visibility = "hidden";
        document.getElementById("info2").style.visibility = "visible";

    });

</script>

